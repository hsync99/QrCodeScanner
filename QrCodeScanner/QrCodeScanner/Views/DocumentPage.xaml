<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:QrCodeScanner.ViewModels"
             Title="Подписание"
             x:Class="QrCodeScanner.Views.DocumentPage">

    <ContentPage.BindingContext>
        <vm:DocumentPageViewModel />
    </ContentPage.BindingContext> 
    
    <ContentPage.Content>
        <StackLayout>
            <Frame>
                <StackLayout>
                    
                    <Label Text="{Binding DocumentXML.requisites.description}"/>
                    <Label Text="{Binding DocumentXML.requisites.expiry_date}"/>
                    <Label Text="Документы на подписание"/>
                    <Label Text=""/>
                    <Label Text="organisation-> nameRu"/>
                    <Label Text="meta"/>
                    <Label Text="documentXML"/>


                </StackLayout>
            </Frame>

            <Button Text="Подписать"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>